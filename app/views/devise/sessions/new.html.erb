<div class="row sign-in-container">
  <div class="small-12 columns"><h2>Log In<h2></div>

  <div class="small-12 medium-6 columns">
    <!-- <h2>Log In</h2> -->

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :name, placeholder: "Name", label: false, required: false, autofocus: true %>
        <%= f.input :password, placeholder: "Password", label: false, required: false %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log In" %>
      </div>
    <% end %>
  </div>
  <div class="small-12 medium-2 columns"></div>
</div>
