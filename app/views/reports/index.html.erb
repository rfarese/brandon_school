<div class="row report-filter-title-container">
  <div class="small-12 columns text-center">
  <h1 class="report-filter-title">Report Filters</h1>
  </div>
</div>

<ul class="tabs" data-tabs id="filter-tabs">
  <div class="small-3 columns">
    <li class="tabs-title is-active"><a href="#panel1" aria-selected="true">Houses</a></li>
  </div>

  <div class="small-3 columns">
    <li class="tabs-title"><a href="#panel2">Check In's</a></li>
  </div>

  <div class="small-3 columns">
    <li class="tabs-title"><a href="#panel3">Student Status</a></li>
  </div>

  <div class="small-3 columns">
    <li class="tabs-title"><a href="#panel4">Date Range</a></li>
  </div>
</ul>

<%= simple_form_for :filters, url: report_filters_path, method: :get do |f| %>
  <div class="tabs-content" data-tabs-content="filter-tabs">

    <div class="tabs-panel is-active" id="panel1">
      <%= f.input :houses,
        collection: @houses,
        as: :check_boxes,
        label: false,
        input_html: { class: 'multiselecthouse', multiple: true },
        include_hidden: false
      %>
    </div>

    <div class="tabs-panel" id="panel2">
      <%= f.collection_radio_buttons :status, [
        [:all, 'All'],
        [:complete, 'Complete'],
        [:incomplete, 'Incomplete']
        ], :first, :last
      %>
    </div>

    <div class="tabs-panel" id="panel3">
      <%=   f.collection_check_boxes :student_status, [
          [:asleep, 'Asleep'],
          [:awake, 'Awake'],
          [:bathroom, 'Bathroom'],
          [:pass, 'Pass'],
          [:off_campus, 'Off Campus'],
          [:missing, 'Missing'],
          [:empty, 'Empty']
        ], :first, :last,
        include_hidden: false
      %>
    </div>

    <div class="tabs-panel" id="panel4">
      <div class="row">
        <div class="small-6 columns">
          <h4>Start Date</h4>
          <%= f.input :start_date, :as => :date, :start_year => Date.today.year,
            :end_year => 1900,
            :order => [ :month, :day, :year], :required => true, label: false
          %>
        </div>

        <div class="small-6 columns">
          <h4>End Date</h4>
          <%= f.input :end_date, :as => :date, :start_year => Date.today.year,
            :end_year => 1900,
            :order => [ :month, :day, :year], :required => true, label: false
          %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">

    <div class="small-12 columns text-center" id="filter-button-container">
      <%= f.button :submit, value: "Submit", id: "filter-button" %>
    </div>

  </div>
<% end %>
