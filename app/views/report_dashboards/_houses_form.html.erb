<a data-open='houseSelector'>Houses</a>

<div id='houseSelector' class="reveal" data-reveal>
  <h2 class="text-center">Houses</h2>
  <div class="text-center">
    <%= simple_form_for :choosen_houses, url: check_ins_report_path, method: :get do |f| %>

      <%= f.input :id,
        collection: houses,
        as: :check_boxes,
        label: false,
        input_html: { class: 'multiselecthouse', multiple: true },
        include_hidden: false
      %>

      <%= f.button :submit, value: "Submit" %>
    <% end %>
  </div>
  <button class="close-button" data-close aria-label="Close modal" type="button">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
